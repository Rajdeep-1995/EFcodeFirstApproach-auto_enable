            }
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
            <a href="/products/index?SortColumn=CategoryID&IconClass=fa-sort-asc&pageno=@ViewBag.PageNo">Category Id</a>
                if (ViewBag.SortColumn == "CategoryID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
        <a href="/products/index?SortColumn=CategoryID&IconClass=fa-sort-desc&pageno=@ViewBag.PageNo">Category Id</a>
                if (ViewBag.SortColumn == "CategoryID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:5%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/products/index?SortColumn=BrandID&IconClass=fa-sort-asc&pageno=@ViewBag.PageNo">Brand Id</a>
                if (ViewBag.SortColumn == "BrandID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/products/index?SortColumn=BrandID&IconClass=fa-sort-desc&pageno=@ViewBag.PageNo">Brand Id</a>
                if (ViewBag.SortColumn == "BrandID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%">Active</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td><img src="data:image;base64,@item.Photo" width="100px" height="100px"/></td>
    <td>@Html.DisplayFor(temp=>item.ProductID)</td>
    <td>@Html.DisplayFor(temp=>item.ProductName)</td>
    @if (item.Price.HasValue)
    {
<td>@Html.DisplayFor(temp => item.Price)</td>
    }

    @if (item.DateOfPurchase.HasValue)
    {
<td>@Html.DisplayFor(temp => item.DateOfPurchase)</td>
    }

<td>@Html.DisplayFor(temp => item.AvailabilityStatus)</td>
    @if (item.CategoryID != null)
    {
<td>@Html.DisplayFor(temp=>item.Category.CategoryName)</td>
    }
    @if (item.BrandID != null)
    {
<td>@Html.DisplayFor(temp => item.Brand.BrandName)</td>
    }
<td>@Html.DisplayFor(temp => item.Active)</td>
<td>
    @Html.ActionLink("Details", "Details", new { id = item.ProductID, Controller = "Products" })
    @Html.ActionLink("Edit", "Edit", new { id = item.ProductID, Controller = "Products" })
    @Html.ActionLink("Delete", "Delete", new { id = item.ProductID, Controller = "Products" })
    @*<a href="/products/details/@item.ProductID">Details</a>
    <a href="/products/edit/@item.ProductID">Edit</a>
    <a href="/products/delete/@item.ProductID">Delete</a>*@
</td>
</tr>

    }
    <tr>
        <td colspan="9">
            @{ 
                int pageNo = ViewBag.PageNo;
                int PreviousPage = pageNo - 1;
                if (PreviousPage < 0)
                {
                    PreviousPage = 1;
                }
                int NextPage = pageNo + 1;
                if (NextPage > ViewBag.NoOfPg)
                {
                    NextPage = ViewBag.NoOfPg;
                }
                int NumberOfpgs = ViewBag.NoOfPg;
                        <ul class="pagination justify-content-center">
                            @if (PreviousPage > 0)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="/products/index?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&PageNo=@PreviousPage">Previous</a>
                                </li>
                            }
                            @for (int i = 0; i < NumberOfpgs; i++)
                            {
                                if ((i + 1) == pageNo)
                                {
                                    <li class="page-item active">
                                        <a class="page-link" href="/products/index?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&PageNo=@(i + 1)">@(i + 1)</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/products/index?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&PageNo=@(i + 1)">@(i + 1)</a>
                                    </li>

                                }
                            }
                            @if (NextPage < ViewBag.NoOfpg)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="/products/index?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&PageNo=@NextPage">Next</a>
                                </li>
                            }
                        </ul>
            }
        </td>
    </tr>
</table>