@model List<EFDbFirstApproach.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Products</h2>

<form class="d-flex float-start m-2" action="/products/index">

    @Html.Label("Search",new {@class="m-1"})
    @Html.TextBox("Search", ViewBag.Search as string, new {@class="form-control mr-1",placeholder="Search here.."})
    <button type="submit" class="btn btn-primary mx-1">GO</button>

</form>
<a href="/products/create">Create Product</a>

<table class="table">
    <tr class="table-secondary">
        <th style="width:15%">
           Photo
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/products/index?SortColumn=ProductID&IconClass=fa-sort-asc&pageno=@ViewBag.PageNo">Product Id</a>
                if (ViewBag.SortColumn == "ProductID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/products/index?SortColumn=ProductID&IconClass=fa-sort-desc&pageno=@ViewBag.PageNo">Product Id</a>
                if (ViewBag.SortColumn == "ProductID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:30%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/products/index?SortColumn=ProductName&IconClass=fa-sort-asc&pageno=@ViewBag.PageNo">Product Name</a>
                if (ViewBag.SortColumn == "ProductName")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/products/index?SortColumn=ProductName&IconClass=fa-sort-desc&pageno=@ViewBag.PageNo">Product Name</a>
                if (ViewBag.SortColumn == "ProductName")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:5%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/products/index?SortColumn=Price&IconClass=fa-sort-asc&pageno=@ViewBag.PageNo">Price</a>
                if (ViewBag.SortColumn == "Price")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/products/index?SortColumn=Price&IconClass=fa-sort-desc&pageno=@ViewBag.PageNo">Price</a>
                if (ViewBag.SortColumn == "Price")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
            <a href="/products/index?SortColumn=DateOfPurchase&IconClass=fa-sort-asc&pageno=@ViewBag.PageNo">Date of purchase</a>
                if (ViewBag.SortColumn == "DateOfPurchase")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
        <a href="/products/index?SortColumn=DateOfPurchase&IconClass=fa-sort-desc&pageno=@ViewBag.PageNo">Date of purchase</a>
                if (ViewBag.SortColumn == "DateOfPurchase")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
            <a href="/products/index?SortColumn=Availability&IconClass=fa-sort-asc&pageno=@ViewBag.PageNo">Availability</a>
                if (ViewBag.SortColumn == "Availability")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
